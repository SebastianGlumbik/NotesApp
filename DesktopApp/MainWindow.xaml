<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Notes" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Label Content="Username" Margin="80,120,0,0" Height="30" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBox x:Name="loginUsername" TextWrapping="Wrap" Margin="180,120,0,0"  Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0"/>
        <Label Content="Password" Margin="80,160,0,0" Height="30" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0"/>
        <PasswordBox x:Name="loginPassword" Margin="180,160,0,0" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0"/>
        <Button Content="Login"  Click="Login" Margin="180,210,0,0" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0"/>

        <Label Content="Username" Margin="80,100,0,0" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <TextBox x:Name="registerUsername" TextWrapping="Wrap" Margin="180,100,0,0"  Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <Label Content="Password" Margin="80,140,0,0" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <PasswordBox x:Name="registerPassword1" Margin="180,140,0,0" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <Label Content="Verify Password" Margin="80,180,0,0" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <PasswordBox x:Name="registerPassword2" Margin="180,180,0,0" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
        <Button Content="Register"  Click="Register" Margin="180,230,0,0" Height="30" Width="160" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
    </Grid>
</Window>
